@model ASPNetCore.Models.Curso

@{
    ViewData["Title"] = "Detalle del Curso";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Escuela)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Escuela.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoCurso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoCurso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Modificar</a> |
    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
</div>
